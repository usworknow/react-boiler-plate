{
    "tabWidth": 2,
    "printWidth": 120,
    "trailingComma": "all",
    "semi": true,
    "singleQuote": true,
    "overrides": [
        {
            "files": "*.{js,jsx}",
            "options": {
                "tabWidth": 2,
                "parser": "flow"
            }
        },
        {
            "files": "*.{json,prettierrc,eslintrc,babelrc}",
            "options": {
                "tabWidth": 4,
                "parser": "json"
            }
        }
    ]
}
